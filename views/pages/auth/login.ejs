<h1>Log in</h1>

<form method="POST">

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" 
        class="form-control" 
        name="email" 
        value="<%- form.email %>"
        id="email"
        required>
    </div>
  
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" 
        class="form-control" 
        name="password"
        id="password"
        required>
    </div>

    <% if (errors) { %>
        <div class="alert alert-danger">Invalid email or password</div>
    <% } %>

    <button class="btn btn-primary">Log in!</button>
  </form>